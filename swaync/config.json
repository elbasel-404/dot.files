{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right" /* values: left, center, right */,
  "positionY": "top" /* values: top, center, bottom */,
  "layer": "overlay" /* background, bottom, top, overlay */,
  "control-center-layer": "top" /* separate layer for CC */,
  "layer-shell": true /* enable layer-shell surfaces */,
  "ignore-gtk-theme": true /* use your CSS, unset GTK_THEME */,
  "cssPriority": "application" /* priority when loading CSS */,
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "control-center-exclusive-zone": true /* ignore compositor reserved zones */,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "notification-window-width": 500,
  "notification-window-height": -1 /* -1 = fill available vertical space */,
  "notification-window-preferred-output": "" /* select specific monitor */,
  "keyboard-shortcuts": true,
  "notification-grouping": true,
  "image-visibility": "when-available" /* always / when-available / never */,
  "transition-time": 200 /* animation in ms */,
  "hide-on-clear": false,
  "hide-on-action": true,
  "text-empty": "No Notifications",
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 500,
  "control-center-height": 600,
  "widgets": [
    "inhibitors",
    "title",
    "dnd",
    "menubar",
    "mpris",
    "label",
    "buttons-grid",
    "volume",
    "backlight",
    "notifications",
    "tray",
    "battery",
    "idle_inhibitor",
    "slider"
  ],
  "widget-config": {
    "inhibitors": {
      "text": "Inhibitors",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "title": {
      "text": "Notifications",
      "button-text": "Clear All",
      "clear-all-button": true
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "label": {
      "max-lines": 5,
      "text": "Label Text"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 12,
      "autohide": false,
      "loop-carousel": true
    },
    "menubar": {
      "position": "right" /* relative to bar */,
      "actions": [
        { "label": "WiFi", "command": "nmcli", "type": "normal" },
        { "label": "Brave", "command": "brave", "type": "normal" }
      ]
    },
    "buttons-grid": {
      "buttons-per-row": 3,
      "actions": [
        {
          "label": "",
          "command": "nmcli radio wifi off",
          "type": "toggle",
          "active": true,
          "update-command": "nmcli radio wifi | grep enabled"
        },
        {
          "label": "Mute",
          "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
          "type": "normal"
        }
      ]
    },
    "volume": {
      "format": "%.0f%%",
      "show-label": true,
      "capabilities": {
        "sound-name": "",
        "sound-file": "",
        "limit": 100
      }
    },
    "backlight": {
      "format": "%i%%",
      "show-label": true
    },
    "tray": {
      "spacing": 8
    },
    "battery": {
      "states": {
        "good": 90,
        "ok": 70,
        "lowish": 40,
        "low": 20,
        "critical": 10
      }
    },
    "idle_inhibitor": {
      "format-icons": {
        "activated": "",
        "deactivated": "⏻"
      },
      "format": "{icon}"
    },
    "slider": {
      "label": "Custom",
      "commands": {
        "set": "echo SWAYNC_SLIDER_VALUE={value}",
        "get": "echo 42"
      },
      "animation-duration": 250
    }
  },
  "scripts": {
    "vibrate": {
      "exec": "/usr/bin/swaync-led notify",
      "urgency": "Normal",
      "app-name": "Slack|Messages",
      "summary": "New message.*"
    }
  },
  "script-fail-notify": true,
  "notification-visibility": {
    "spotify-low": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  }
}
